{
  "name": "retrospective-board",
  "repository": "github:dazedbear/retrospective-board",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link": "^1.2.4",
    "apollo-link-error": "^1.1.2",
    "apollo-link-http": "^1.5.7",
    "bootstrap": "4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "node-sass": "^4.10.0",
    "pusher-js": "^4.3.1",
    "react": "^16.6.3",
    "react-app-polyfill": "^0.1.3",
    "react-automata": "^4.0.4",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "react-styleguidist": "^8.0.6",
    "reactstrap": "^6.5.0"
  },
  "scripts": {
    "start": "export HTTPS=true && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --notify --reporters=default --reporters=setupTestReporter.js",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "prettier": "prettier --use-tabs --single-quote --trailing-comma es5 --write {src,public,mockServer,.storybook}/**/*.{js,jsx,mjs,json,md,css,sass}",
    "prettier:staged": "prettier --use-tabs --single-quote --trailing-comma es5 --write"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@slack/client": "^4.8.0",
    "cookie-parser": "^1.4.3",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^1.2.0",
    "imagemin-lint-staged": "^0.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "pusher": "^2.2.0",
    "yn": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test:coverage && git add README.md && lint-staged"
    }
  },
  "lint-staged": {
    "{src,public,mockServer,.storybook}/**/*.{js,jsx,json,md,css,sass}": [
      "yarn run prettier:staged",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "coverageThreshold": 30
}
